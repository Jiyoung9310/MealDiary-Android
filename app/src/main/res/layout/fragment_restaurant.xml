<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.teamnexters.android.mealdiary.ui.write.restaurant.RestaurantViewModel.ViewModel"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_title"
            style="@style/H1BlackBoldLeft"
            android:layout_width="wrap_content"
            android:layout_height="88dp"
            android:layout_marginStart="20dp"
            android:gravity="center_vertical"
            android:text="@string/restaurant_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <androidx.appcompat.widget.AppCompatEditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:hint="@string/restaurant_hint"
            android:onTextChanged="@{(text, start, before, count) -> viewModel.inputs.toKeyword(text.toString())}"
            android:text="@{viewModel.keyword}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_title"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
